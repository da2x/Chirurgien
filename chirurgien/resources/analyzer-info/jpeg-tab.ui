            <property name="visible">True</property>
            <property name="left-margin">10</property>
            <property name="right-margin">10</property>
            <property name="top-margin">7</property>
            <property name="bottom-margin">7</property>
            <property name="sensitive">False</property>
            <property name="editable">False</property>
            <property name="cursor-visible">False</property>
            <property name="halign">GTK_ALIGN_FILL</property>
            <property name="wrap-mode">GTK_WRAP_WORD</property>
            <property name="buffer">jpeg-does-not</property>
          </object>
        </child>
      </object>
      <packing>
        <property name="left-attach">1</property>
        <property name="top-attach">4</property>
        <property name="height">1</property>
        <property name="width">1</property>
      </packing>
    </child>
  </object>
  <object class="GtkTextBuffer" id="jpeg-does">
    <property name="text" translatable="yes">
<![CDATA[Recognize the following marker types:
SOI, APP0 (JFIF/JFXX), APP1 (Exif/XMP), APP2 (ICC_PROFILE), DQT, DHT, DAC, SOFn, DRI, SOS, DNL, COM, EOI
Identify the EOI marker as end of file
Assume that the COM segment is encoded using UTF-8 (this will often not be the case)]]>
    </property>
  </object>
  <object class="GtkTextBuffer" id="jpeg-does-not">
    <property name="text" translatable="yes">
<![CDATA[Recognize all other marker types
Verify that APP0 (or APP1) is the first segment, or if one is even defined]]>
    </property>
  </object>
</interface>
